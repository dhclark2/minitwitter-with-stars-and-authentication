= form_for @tweet, html: { class: "form-horizontal", role: "form" } do |f|
  -if @tweet.errors.any?
    .alert.alert-danger.alert-dismissable{role: "alert"}
      %button.close{type: "button", data: {dismiss: "alert"} }
        %span{aria: {hidden: "true"} } &times;
        %span.sr-only Close
      %h4= "#{pluralize(@tweet.errors.count, "error")} prohibited this tweet from being saved:"

      %ul
        - @tweet.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label "Tweet (140 char-max)", class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :tweet, class: 'form-control'
  .form-group
    = f.label :user_name, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :user_name, class: 'form-control'
  .form-group
    = f.label :link, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :link, class: 'form-control'
  .form-group
  .pull-right
    .col-sm-offset-2.col-sm-10
      = f.submit class: 'btn btn-primary'
